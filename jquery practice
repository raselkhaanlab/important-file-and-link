<script  type="text/javascript">

   {{--  add source by rkhaan --}}

   $(function(){
                     /* edit source*/


                    $(document).on('click','.edit-amount',function(){
                        var em= $(this).closest('td').prev().find('input').prop('disabled',false);
                     
                      var dropdown= $(this).closest('td').prev().prev();
                      dropdown.find('input').prop('disabled',false);
                      var select=$("#source_id_1").html();
                      alert(dropdown.html("<select value='' name='source[]'>"+select+"</select>"));

                      // dropdown.html("<select value='' name='source[]'>"+)
                           

                    });
    




      $(document).on('click','.remove',
        function(){
                
                var conform=confirm('do u really want to delete?');
                if(conform){
                    $(this).closest('tr').remove();

                }
                       });
       
      $("#add").on('click',function(){
             var amount=$("#amount").val();
             var source_val=$("#source_id_1 option:selected").val();
             var source_text=$("#source_id_1 option:selected").text();
             
          
           
           // alert($("#source_id_1 option:selected").val());
        // var row="<tr><td>jica</td><td>1000</td><td><a class='btn btn-success'>+</a> <a class='btn btn-danger'>-</a></td></tr>";
        //     $("#add-source").append(row);
           var row= "<tr><td>"+"<input type='text' disabled name='source[]' value="+source_val+">"+"</td>"+"<td ><input class='am' disabled type='number' name='amount[]' value="+amount+"></td> <td> <a class='btn btn-primary edit-amount' > Edit</a> <a class='btn btn-danger remove'>delete</a></td></tr>" ;

           if(amount && source_val && source_text){
               $("#add-source").append(row);
                $('#source_id_1 option:first').prop('selected',true).trigger('change')
                    ;
               $('#amount').val('');
                   ;
           }
           else{
            alert('plz inter all the input filed');
           }

      });


   });



    function add_row(i)
    {
        var rowCount = $('#table_body tr').length;

        if ($('#source_id_' + rowCount).val() == "")
        {
            alert('Candidate Field Can not be empty.');
            $('#source_id_' + rowCount).focus();

        }
        else
        {
            rowCount++;
            $('#source_table').append(

                '<tr id="tr_' + rowCount + '">'
                + '<td><select name="source[]" id="source_id_' + rowCount + '" >'

                + '<option> @lang('Select One') </option>'
                +'</select></td>'

                + '<td><input type="number" name="amount[]" class="span11" placeholder="@lang('amount')"  /></td>'

                + '<td>\n\
                        <a class="btn btn-success" id="add_' + rowCount + '" title="@lang('Add')" onclick="add_row(' + rowCount + ');"><i class="icon-plus" ></i></a>\n\
                        <a class="btn btn-danger"  title="@lang('Delete')"  onclick="remove_row(' + rowCount + ');"><i class="icon-minus" ></i> </a>\n\
                    </td>'
                + '</tr>'

            );

            get_source_data(rowCount);
            $('select').select2();

        }
    }

    //..........................................getsource*******data.....................................//
    function get_source_data(rowCount)
    {
        $.ajax({
            url: "{{ route('source_data') }}",
            type: "get",
            success: function (data)
            {
                $('#source_id_'+rowCount).html("");
                $('#source_id_'+rowCount).html(data);
            },
        });
    }


 //..........................................remove****row..........................//
    function remove_row(i) {

        var rowCount = $('#table_body tr').length;
        if (rowCount != 1)
        {

            $("#table_body tr:last").remove();

        }
    }



</script>


